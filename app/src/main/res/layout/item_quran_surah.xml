<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <TextView
        android:id="@+id/tv_item_surah_verse"
        style="@style/TextAppearance.AppCompat.Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="50dp"
        android:text="114"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_surah_verse"
        app:layout_constraintEnd_toStartOf="@+id/tv_item_surah_arab"
        app:layout_constraintStart_toEndOf="@+id/tv_item_surah_verse"
        app:layout_constraintTop_toTopOf="@+id/tv_item_surah_verse">

        <TextView
            android:id="@+id/tv_item_surah_surah"
            style="@style/TextAppearance.AppCompat.Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Al-Fatihah" />

        <TextView
            android:id="@+id/tv_item_surah_total_ayah"
            style="@style/TextAppearance.AppCompat.Item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Mecca - 7 Ayah" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_surah_arab"
        style="@style/TextAppearance.AppCompat.Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kemenag"
        android:text="سُورَةُ ٱلْفَاتِحَةِ"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="#B5B5B5"
        android:fontFamily="@font/kemenag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />
</androidx.constraintlayout.widget.ConstraintLayout>